<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissões -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Feature necessária para Google Maps -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrailManager"
        tools:targetApi="31">

        <!-- Chave do Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDcyD4FyRSR4bO9sKaZTnqXKNtsJltMxQI" />


        <!-- Activity Principal -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ConfigActivity -->
        <activity
            android:name=".activities.ConfigActivity"
            android:exported="false"
            android:label="Configurações"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <!-- RegisterTrailActivity -->
        <activity
            android:name=".activities.RegisterTrailActivity"
            android:exported="false"
            android:label="Registrar Trilha"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <!-- ViewTrailsActivity -->
        <activity
            android:name=".activities.ViewTrailsActivity"
            android:exported="false"
            android:label="Consultar Trilhas"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <!-- TrailDetailActivity -->
        <activity
            android:name=".activities.TrailDetailActivity"
            android:exported="false"
            android:label="Detalhes da Trilha"
            android:parentActivityName=".activities.ViewTrailsActivity"
            android:screenOrientation="portrait" />

        <!-- CreditsActivity -->
        <activity
            android:name=".activities.CreditsActivity"
            android:exported="false"
            android:label="Créditos"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <!-- Serviço de Localização -->
        <service
            android:name=".services.LocationTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

    </application>

</manifest>