<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_trail"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvAppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerencie suas trilhas e caminhadas"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterTrail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Registrar Trilha"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_play"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewTrails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Consultar Trilhas"
        android:textSize="16sp"
        app:icon="@drawable/ic_list"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfig"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Configurações"
        android:textSize="16sp"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCredits"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Créditos"
        android:textSize="16sp"
        app:icon="@drawable/ic_info"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>